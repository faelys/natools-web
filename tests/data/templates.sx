(html
   "<!DOCTYPE HTML PUBLIC \"-//W3C//DTD HTML 4.01//EN\" \"http://www.w3.org/TR/html4/strict.dtd\">
<html>
  <head>
    <title>" (element title) "</title>
  </head>
  <body>\n"
(render html-body)
"    <div class=\"sidebar\">\n"
(render sidebar
   "<h1>Side bar</h1>\n"
   "<p>Tags:" (tag-list tags/ (render
         " <a href=\"/tags/" (name (2)) "\">"
         (element description (name (2)))
         "</a>")) "</p>\n"
   (tags pages/news
      (lesser-elements reverse (limit 1) (render "<p>Previous: " (render href) "</p>\n"))
      (greater-elements (limit 1) (render "<p>Next: " (render href) "</p>\n"))))
"    </div>
    <div class=\"footer\">\n"
(element footer "<p>Default footer: <a href=\"/index\">return to index</a></p>\n")
"    </div>
  </body>
</html>\n")

(html-body
"<h1>" (element title) "</h1>\n"
(element main-text))

(href "<a href=\"" (path) "\">" (element title) "</a>")

(comment-li
   "<li><p>On "
   (date
      (month January February March April May June July
         August September October November December)
      " "
      (day (suffix (th (4 31)) (st 1 21 31) (nd 2 22) (rd 3 23)))
      " "
      (year)
      " at "
      (hour) ":" (padded-minute))
   ", "
   (if-link "<a href=\"" (link) "\">")
   (name "an anonymous")
   (if-link "</a>")
   " wrote:</p>\n<blockquote>\n"
   (text)
   "</blockquote></li>\n")

(page-comments (comments
   "<h1>Comments</h1>\n<ol>\n"
   (list (render (render comment-li)))
   "</ol>\n"
   (preview
      "<h1>Preview</h1>\n<ol>\n"
      (render comment-li)
      "</ol>\n")))

(site-root "http://example.com")

(comment-form "\
<form class=\"mainform\" method=\"post\" action=\"" (path) "/comments\">
  <p><label>Name or nick:
    <input name=\"c_name\" value=\"" (parameter c_name) "\" type=\"text\">
  </label></p>
  <p><label>E-mail address:
    <input name=\"c_mail\" value=\"" (parameter c_mail) "\" type=\"text\">
  </label></p>
  <p><label>Web site:
    <input name=\"c_site\" value=\"" (parameter c_site) "\" type=\"text\">
  </label></p><!--
  <p><label>Very special field:
    <input name=\"address\" value=\"http://\" type=\"text\">
  </label></p>-->
  <p><label>Comment text:
    <textarea name=\"c_text\" cols=\"80\" rows=\"10\">" (parameter c_text) "</textarea>
  </label></p>
  <p class=\"buttons\">
    <input value=\"Preview\" name=\"preview\" type=\"submit\">
    <input value=\"Submit\" name=\"submit\" type=\"submit\">
  </p>
</form>
")

(comment-filter
   accept
   (if has-unknown-field reject)
   (if
      (or
         (not (and name mail link text))
         (name (contains Spammer)))
      force-preview))

(error-page "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) "</h1>
    <p>" (message) "</p>
  </body>
</html>\n")

(error-page-301 "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) " - " (message) "</h1>
    <p>" (path) " has moved to <a href=\"" (location) "\">" (location) "</p>
  </body>
</html>\n")

(error-page-303 "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) " - " (message) "</h1>
    <p>Please proceed to <a href=\"" (location) "\">" (location) "</p>
  </body>
</html>\n")

(error-page-404 "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) " - " (message) "</h1>
    <p>" (path) " was not found on this server</p>
  </body>
</html>\n")
