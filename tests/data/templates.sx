(html
   "<!DOCTYPE HTML PUBLIC \"-//W3C//DTD HTML 4.01//EN\" \"http://www.w3.org/TR/html4/strict.dtd\">
<html>
  <head>
    <title>" (element title) "</title>
  </head>
  <body>\n"
(render html-body)
"    <div class=\"sidebar\">\n"
(render sidebar
   "<h1>Side bar</h1>\n"
   "<p>Tags:" (tag-list tags/ (render " " (name (2)))) "</p>\n"
   (tags pages/news
      (lesser-elements reverse (limit 1) (render "<p>Previous: " (element title) "</p>\n"))
      (greater-elements (limit 1) (render "<p>Next: " (element title) "</p>\n"))))
"    </div>
    <div class=\"footer\">\n"
(element footer "<p>Default footer</p>\n")
"    </div>
  </body>
</html>\n")

(html-body
"<h1>" (element title) "</h1>\n"
(element main-text))

(href "<a href=\"" (path) "\">" (element title) "</a>")

(page-comments (comments
   "<h1>Comments</h1>\n<ol>\n"
   (list (render
      "<li><p>On "
      (date
         (month January February March April May June July
            August September October November December)
         " "
         (day (suffix (th (4 31)) (st 1 21 31) (nd 2 22) (rd 3 23)))
         " "
         (year)
         " at "
         (hour) ":" (padded-minute))
      ", "
      (name)
      " wrote:</p>\n<blockquote>\n"
      (text)
      "</blockquote></li>\n"))
   "</ol>\n"))

(error-page "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) "</h1>
    <p>" (message) "</p>
  </body>
</html>\n")

(error-page-301 "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) " - " (message) "</h1>
    <p>" (path) " has moved to <a href=\"" (location) "\">" (location) "</p>
  </body>
</html>\n")

(error-page-404 "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) " - " (message) "</h1>
    <p>" (path) " was not found on this server</p>
  </body>
</html>\n")
