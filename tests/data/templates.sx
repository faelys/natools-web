(html
   "<!DOCTYPE HTML PUBLIC \"-//W3C//DTD HTML 4.01//EN\" \"http://www.w3.org/TR/html4/strict.dtd\">
<html>
  <head>
    <title>" (element title) "</title>
  </head>
  <body>\n"
(render html-body)
"    <div class=\"sidebar\">\n"
(render sidebar
   "<p>Tags:" (tag-list tags/ (render " " (name (2)))) "</p>\n")
"    </div>
    <div class=\"footer\">\n"
(element footer "<p>Default footer</p>\n")
"    </div>
  </body>
</html>\n")

(html-body
"<h1>" (element title) "</h1>\n"
(element main-text))

(error-page "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) "</h1>
    <p>" (message) "</p>
  </body>
</html>\n")

(error-page-404 "\
<html>
  <head>
    <title>Error " (code) "</title>
  </head>
  <body>
    <h1>Error " (code) " - " (message) "</h1>
    <p>" (path) " was not found on this server</p>
  </body>
</html>\n")
